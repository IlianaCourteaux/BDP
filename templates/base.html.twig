		{# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> #}
		
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

        {#<script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		#}
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
		<link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/mqueries.css') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}


    </head>

	<body>

	<header>
        <nav class="navbar">

        	<a class="nav-logo" id="logo" href="{{ path('app_home') }}">
            	<img class="nav-logo-img" src="{{ asset('img/logo_eye_white.png') }}" alt="Les Bâtonnets de Poisson">
           	 	<p class="titre nav-titre">Les Bâtonnets de Poisson</p>
        	</a>

            <ul class="nav-menu">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_articles', {category: 'guides'}) }}">Guides</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_articles', {category: 'builds'}) }}">Builds</a>
                </li>

                {# <li class="nav-item">
                    <a class="nav-link" href="">Galerie</a>
                </li> #}

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_page', {slug: 'charte-de-guilde'}) }}">Charte de Guilde</a>
                </li>
			</ul>

			<ul class="nav-menu-account">
                <li class="nav-item-account">
                    <a class="nav-link nav-account-text" href="{{ path('app_contact') }}">Contact</a>
                    <a class="nav-link nav-account-icon" href="{{ path('app_contact') }}"><i class="fa-solid fa-envelope fa-lg"></i></a>
                </li>

                {% if app.user%}
                    <li class="nav-item-account">
                        <a class="nav-link nav-account-text" href="">Mon profil</a>
                        <a class="nav-link nav-account-icon" href=""><i class="fa-solid fa-user fa-lg"></i></a>
                    </li>
                {% else %}
                    <li class="nav-item-account">
                        <a class="nav-link nav-account-text" href="{{ path('app_login') }}">Connexion</a>
                        <a class="nav-link nav-account-icon" href="{{ path('app_login') }}"><i class="fa-solid fa-user fa-lg"></i></a>
                    </li>
                {% endif %}
           </ul>

           <div class="hamburger">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>

        </nav>
    </header>

	<main>
    {% block body %}{% endblock %}
	</main>

	<footer>
		<p>© Les Bâtonnets de Poisson (2015-2022)</p>
	</footer>

	{% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script src="{{ asset('js/site.js') }}" type="text/javascript"></script>
    {% endblock %}
	</body>

</html>
