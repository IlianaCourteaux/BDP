{% extends 'base.html.twig' %}

{% block title %}Les BÃ¢tonnets de Poisson - Connexion{% endblock %}

{% block body %}

        {% for message in app.flashes('success') %}
        <div>
            {{ message }}
        </div>
        {% endfor %}

    <div>
        <h1>Connexion</h1>

        <form action="{{ path('app_login') }}" method="post">

            <div>
                <label for"username">Adresse email</label>
                <input type="email" id="username" name="_username" placeholder="exemple@batonnets.fr"></input>
            </div>

            <div>
                <label for"password">Mot de passe</label>
                <input type="password" id="password" name="_password" placeholder="********"></input>
            </div>

            {% if error %}
                <div>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div>
                <button type="submit" class="button">Se connecter</button>
            </div>

        </form>
    </div>

{% endblock %}
