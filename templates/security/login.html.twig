{% extends 'base.html.twig' %}

{% block title %}Les BÃ¢tonnets de Poisson - Connexion{% endblock %}

{% block body %}

<section class="form_page">

        {% for message in app.flashes('success') %}
        <div>
            {{ message }}
        </div>
        {% endfor %}

    <div class="form_section">
        <h1 class="form_title">Connexion</h1>

        <form action="{{ path('app_login') }}" method="post">

            <div>
                <label for"username" class="form_label">Adresse email</label>
                <input type="email" class="form_item" name="_username" placeholder="exemple@batonnets.fr"></input>
            </div>

            <div>
                <label for"password" class="form_label">Mot de passe</label>
                <input type="password" class="form_item" name="_password" placeholder="********"></input>
            </div>

            {% if error %}
                <div>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div>
                <button type="submit" class="submit_button">Se connecter</button>
            </div>

        </form>
    </div>

</section>

{% endblock %}
